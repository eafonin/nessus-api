# Nessus MCP Server - Environment Variables
# Copy to .env and fill in actual values

# Redis Configuration
REDIS_URL=redis://redis:6379

# Nessus Scanner 1
NESSUS_URL_1=https://nessus:8834
NESSUS_ACCESS_KEY_1=your_access_key_here
NESSUS_SECRET_KEY_1=your_secret_key_here

# Additional Nessus Scanners (optional)
# NESSUS_URL_2=https://nessus2.example.com:8834
# NESSUS_ACCESS_KEY_2=your_access_key_here
# NESSUS_SECRET_KEY_2=your_secret_key_here

# MCP Server Authentication
BEARER_TOKEN=your_bearer_token_here

# Logging
LOG_LEVEL=INFO

# Worker Configuration
MAX_CONCURRENT_SCANS=5

# Task TTL (hours)
TASK_TTL_HOURS=24

# Idempotency Key TTL (hours)
IDEMPOTENCY_TTL_HOURS=48
